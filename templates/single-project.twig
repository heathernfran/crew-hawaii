{% extends 'base.twig' %}

  {% block content %}

  <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
    <section>
      <h2>{{ post.title }}</h2>
      <p>
        {{ post.client }}
      </p>
      <p>
        {{ post.description }}
      </p>
      {% for image in post.gallery %}
        <img src="{{ Image(image) }}" alt="" />
      {% endfor %}
    </section>
  </article>

  {% endblock %}
